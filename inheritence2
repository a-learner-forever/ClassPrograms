
class Vehicle:
    def __init__(self):
        self.type = "Generic Vehicle"
        self.speed = 0

    def start(self):
        print(f"{self.type} is starting...")

    def accelerate(self):
        self.speed += 10
        print(f"{self.type} is now going at {self.speed} km/h")

class Bike(Vehicle):
    pass

class Car(Vehicle):
    pass

b = Bike()
b.start()
b.accelerate()

c = Car()
c.start()
c.accelerate()
